{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Audit Trail",
  "description": "Schema for tracking token usage and execution metrics",
  "type": "object",
  "required": ["execution_id", "started_at", "token_usage"],
  "properties": {
    "execution_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this execution"
    },
    "started_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO timestamp of execution start"
    },
    "completed_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO timestamp of execution completion"
    },
    "total_duration_seconds": {
      "type": "number",
      "minimum": 0,
      "description": "Total execution duration in seconds"
    },
    "token_usage": {
      "type": "object",
      "required": ["total", "by_model", "by_phase"],
      "properties": {
        "total": {
          "type": "object",
          "required": ["input_tokens", "output_tokens"],
          "properties": {
            "input_tokens": {
              "type": "integer",
              "minimum": 0
            },
            "output_tokens": {
              "type": "integer",
              "minimum": 0
            },
            "estimated_cost_usd": {
              "type": "number",
              "minimum": 0
            }
          }
        },
        "by_model": {
          "type": "object",
          "properties": {
            "haiku": {
              "$ref": "#/definitions/modelUsage"
            },
            "sonnet": {
              "$ref": "#/definitions/modelUsage"
            },
            "opus": {
              "$ref": "#/definitions/modelUsage"
            }
          }
        },
        "by_phase": {
          "type": "object",
          "properties": {
            "phase_0_setup": {
              "$ref": "#/definitions/phaseUsage"
            },
            "phase_1_scaffolding": {
              "$ref": "#/definitions/phaseUsage"
            },
            "phase_2_foundation": {
              "$ref": "#/definitions/phaseUsage"
            },
            "phase_3_core": {
              "$ref": "#/definitions/phaseUsage"
            },
            "phase_4_features": {
              "$ref": "#/definitions/phaseUsage"
            },
            "phase_5_integration": {
              "$ref": "#/definitions/phaseUsage"
            },
            "phase_6_verification": {
              "$ref": "#/definitions/phaseUsage"
            },
            "phase_7_debug": {
              "$ref": "#/definitions/phaseUsage"
            },
            "phase_8_crosscheck": {
              "$ref": "#/definitions/phaseUsage"
            }
          }
        },
        "by_agent": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/agentUsage"
          }
        }
      }
    },
    "planned_estimates": {
      "type": "object",
      "properties": {
        "total_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "total_duration_minutes": {
          "type": "number",
          "minimum": 0
        },
        "model_distribution": {
          "type": "object",
          "properties": {
            "haiku": {
              "type": "integer",
              "minimum": 0
            },
            "sonnet": {
              "type": "integer",
              "minimum": 0
            },
            "opus": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      }
    },
    "variance": {
      "type": "object",
      "properties": {
        "token_variance_percent": {
          "type": "number"
        },
        "duration_variance_percent": {
          "type": "number"
        },
        "notes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "definitions": {
    "modelUsage": {
      "type": "object",
      "properties": {
        "input": {
          "type": "integer",
          "minimum": 0
        },
        "output": {
          "type": "integer",
          "minimum": 0
        },
        "calls": {
          "type": "integer",
          "minimum": 0
        },
        "cost": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "phaseUsage": {
      "type": "object",
      "properties": {
        "input": {
          "type": "integer",
          "minimum": 0
        },
        "output": {
          "type": "integer",
          "minimum": 0
        },
        "duration_seconds": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "agentUsage": {
      "type": "object",
      "required": ["agent_id", "phase", "task", "model"],
      "properties": {
        "agent_id": {
          "type": "string"
        },
        "phase": {
          "type": "string"
        },
        "task": {
          "type": "string"
        },
        "model": {
          "type": "string",
          "enum": ["haiku", "sonnet", "opus"]
        },
        "input_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "output_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "duration_seconds": {
          "type": "number",
          "minimum": 0
        },
        "started_at": {
          "type": "string",
          "format": "date-time"
        },
        "completed_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
