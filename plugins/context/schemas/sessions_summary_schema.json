{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sessions Summary",
  "description": "Schema for tracking all context sessions across the workspace. Maintains indexes of active, completed, and stale sessions for cross-session analysis and work resumption.",
  "schemaVersion": "1.0.0",
  "type": "object",
  "required": ["activeSessions", "completedSessions", "staleSessions"],

  "properties": {
    "activeSessions": {
      "type": "array",
      "description": "Currently active sessions with ongoing work",
      "items": {
        "$ref": "#/definitions/activeSessionRecord"
      }
    },

    "completedSessions": {
      "type": "array",
      "description": "Completed sessions with finalized metrics",
      "items": {
        "$ref": "#/definitions/completedSessionRecord"
      }
    },

    "staleSessions": {
      "type": "array",
      "description": "Sessions detected as stale or zombie (no activity beyond threshold)",
      "items": {
        "$ref": "#/definitions/staleSessionRecord"
      }
    }
  },

  "definitions": {
    "activeSessionRecord": {
      "type": "object",
      "required": ["sessionId", "startTime", "status"],
      "properties": {
        "sessionId": {
          "type": ["string", "null"],
          "description": "Unique session identifier assigned by Claude Code"
        },
        "startTime": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when session started"
        },
        "status": {
          "type": "string",
          "enum": ["active"],
          "description": "Session status (always 'active' in this array)"
        }
      }
    },

    "completedSessionRecord": {
      "type": "object",
      "required": ["sessionId", "startTime", "endTime", "status"],
      "properties": {
        "sessionId": {
          "type": ["string", "null"],
          "description": "Unique session identifier"
        },
        "startTime": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when session started"
        },
        "endTime": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when session ended"
        },
        "status": {
          "type": "string",
          "enum": ["completed"],
          "description": "Session status (always 'completed' in this array)"
        },
        "metrics": {
          "type": "object",
          "description": "Final session metrics",
          "properties": {
            "toolCalls": {
              "type": "integer",
              "minimum": 0
            },
            "delegations": {
              "type": "integer",
              "minimum": 0
            },
            "checkpoints": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "timestamp": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "description": {
                    "type": "string"
                  },
                  "tokenEstimate": {
                    "type": "integer"
                  }
                }
              }
            },
            "contextSaved": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "violations": {
          "type": "array",
          "description": "Protocol violations detected during session",
          "items": {
            "type": "object",
            "properties": {
              "timestamp": {
                "type": "string",
                "format": "date-time"
              },
              "type": {
                "type": "string",
                "enum": ["direct_execution", "specificity_trap", "missing_delegation", "context_overflow"]
              },
              "description": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": ["low", "medium", "high"]
              }
            }
          }
        }
      }
    },

    "staleSessionRecord": {
      "type": "object",
      "required": ["sessionId", "startTime", "detectedAt", "reason"],
      "properties": {
        "sessionId": {
          "type": ["string", "null"],
          "description": "Unique session identifier"
        },
        "startTime": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when session started"
        },
        "detectedAt": {
          "type": "string",
          "format": "date-time",
          "description": "When this session was detected as stale"
        },
        "reason": {
          "type": "string",
          "enum": ["zombie", "missing_transcript", "interrupted"],
          "description": "Why the session was marked as stale"
        },
        "lastActivity": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "Last known activity timestamp"
        }
      }
    }
  }
}
