{
  "$schema": "https://anthropic.com/claude-code/settings.schema.json",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "python3 hooks/context_start.py"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 hooks/context_end.py"
          }
        ]
      }
    ]
  }
}
