{
  "$schema": "https://anthropic.com/claude-code/settings.schema.json",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "python3 hooks/context_start.py",
            "order": 1,
            "description": "Initialize context tracking for session (runs first)"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 hooks/context_end.py",
            "order": 1,
            "description": "Finalize context tracking and generate session summary (runs first)"
          }
        ]
      }
    ]
  }
}
