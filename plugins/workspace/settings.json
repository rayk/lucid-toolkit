{
  "$schema": "https://anthropic.com/claude-code/settings.schema.json",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 hooks/pre-commit-validation.py",
            "condition": "toolInput.command matches 'git commit'",
            "order": 1,
            "description": "Validate workspace configuration integrity before commits (blocking)"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 hooks/sync-on-summary-change.py \"$TOOL_INPUT_FILE_PATH\"",
            "condition": "toolInput.file_path matches '(capability_summary|outcome_summary)\\.json$'",
            "order": 1,
            "description": "Sync indexes to projects when capability or outcome summaries change"
          }
        ]
      }
    ]
  }
}
