{
  "name": "specialize",
  "displayName": "Specialist Agents",
  "description": "Technology-specialized subagents with MCP server integrations for Neo4j, Firecrawl web research, and other specialized tools",
  "version": "1.2.0",
  "author": "rayk",
  "dependencies": {
    "claudeCode": ">=1.0.0",
    "uv": ">=0.1.0"
  },
  "agents": [
    "architect",
    "neo4j",
    "research",
    "debugger",
    "flutter-coder",
    "flutter-env",
    "python-coder",
    "python-env"
  ],
  "mcpServers": {
    "neo4j-cypher": {
      "command": "uvx",
      "args": ["mcp-neo4j-cypher"],
      "env": {
        "NEO4J_URI": "${NEO4J_URI}",
        "NEO4J_USERNAME": "${NEO4J_USERNAME}",
        "NEO4J_PASSWORD": "${NEO4J_PASSWORD}",
        "NEO4J_DATABASE": "${NEO4J_DATABASE:-neo4j}"
      }
    },
    "neo4j-modeling": {
      "command": "uvx",
      "args": ["mcp-neo4j-data-modeling"]
    },
    "firecrawl": {
      "command": "npx",
      "args": ["-y", "firecrawl-mcp"],
      "env": {
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
      }
    }
  }
}
